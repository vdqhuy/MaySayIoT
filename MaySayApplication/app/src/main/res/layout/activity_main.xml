<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Hiển thị nhiệt độ -->
    <TextView
        android:id="@+id/txtTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhiệt độ: -- °C"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <!-- Hiển thị trạng thái quạt -->
    <TextView
        android:id="@+id/txtFanStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quạt: --"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <!-- Input ngưỡng nhiệt độ -->
    <EditText
        android:id="@+id/edtThreshold"
        android:hint="Nhập ngưỡng nhiệt độ"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>

    <!-- Nút đặt ngưỡng nhiệt độ -->
    <Button
        android:id="@+id/btnSetThreshold"
        android:text="Đặt ngưỡng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

</LinearLayout>
